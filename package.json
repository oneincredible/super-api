{
  "name": "@oneinc/super-api",
  "version": "0.0.1",
  "description": "Hyper-Opinionated Framwork for Building a REST APIs.",
  "main": "index.js",
  "repository": "https://github.com/oneincredible/super-api",
  "author": "Pontus Alexander <pontus.alexander@gmail.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "super-api-generate-schema": "./bin/create-schema.js"
  },
  "scripts": {
    "lint": "eslint '*/**/*.js'",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.16.4",
    "pg": "^7.6.1"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "supertest": "^3.3.0",
    "uuid": "^3.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
